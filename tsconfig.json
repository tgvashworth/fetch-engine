{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
