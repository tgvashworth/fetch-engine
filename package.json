{
  "name": "fetch-engine",
  "version": "1.0.0",
  "description": "A smart request-making library that makes sure your Javascript client is a good citizen of your distributed system.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc",
    "watch": "npm run clean && tsc --watch",
    "test": "npm run specs && npm run lint",
    "lint": "find src -name '*.ts' | xargs tslint",
    "specs-bundle": "browserify -r ./dist/test-globals.js dist/**/*.test.js -o dist/test-bundle.js",
    "specs-node": "tape dist/**/*.test.js | tap-min",
    "specs-electron": "browserify -r ./dist/test-globals.js -r es5-shim dist/**/*.test.js | tape-run --browser electron | tap-min",
    "specs-testem": "testem ci -P 10 --skip opera | tap-min",
    "specs": "npm run build && npm run specs-node && npm run specs-electron && npm run specs-testem"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phuu/fetch-engine.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phuu/fetch-engine/issues"
  },
  "homepage": "https://github.com/phuu/fetch-engine#readme",
  "devDependencies": {
    "browserify": "^13.0.0",
    "es5-shim": "^4.5.7",
    "es6-promise": "^3.1.2",
    "ghooks": "^1.0.1",
    "tap-min": "^1.1.0",
    "tape": "^4.4.0",
    "tape-run": "^2.1.3",
    "testem": "^1.4.1",
    "tsd": "^0.6.5",
    "tslint": "^3.0.0",
    "typescript": "^1.6.2"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1"
  }
}
